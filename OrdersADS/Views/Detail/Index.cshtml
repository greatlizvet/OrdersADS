@model IEnumerable<OrdersADS.Models.Detail>

@{
    ViewBag.Title = "Детали";
}

<h2>Детали</h2>

<form asp-controller="Detalil" asp-action="Index" method="get">
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Наименование</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" placeholder="Наименование" name="SearchName">
        </div>
    </div>
    <div class="form-group row">
        <div class="offset-sm-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Фильтр</button>
            @Html.ActionLink("Сброс", "Drop", "Detail", new { @class = "btn btn-default" })
        </div>
    </div>
</form>

<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Articul)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Articul)
        </td>
        <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id}, new { @class = "btn btn-primary"})
                @Html.ActionLink("Детали", "Details", new { id = item.Id}, new { @class = "btn btn-default"})
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id}, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
@Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-primary"})