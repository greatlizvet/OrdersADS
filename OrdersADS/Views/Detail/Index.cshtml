@model IEnumerable<OrdersADS.Models.Detail>

@{
    ViewBag.Title = "Детали";
}

<h2>Детали</h2>

<form asp-controller="Detalil" asp-action="Index" class="form-inline">
    <div class="form-group">
        Наименование: <input type="text" class="form-control">
    </div>
    <button type="submit" class="btn btn-primary">
        Фильтр
    </button>
</form>

<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Articul)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Articul)
        </td>
        <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id}, new { @class = "btn btn-primary"})
                @Html.ActionLink("Детали", "Details", new { id = item.Id}, new { @class = "btn btn-default"})
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id}, new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
@Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-primary"})