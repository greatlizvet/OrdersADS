@model IEnumerable<OrdersADS.Models.Provider>

@{
    ViewBag.Title = "Поставщики";
}

<h2>Поставщики</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @using (Html.BeginForm("Delete", "Provider", new { id = item.Id }))
            {
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Детали", "Details", new { id = item.Id }, new { @class = "btn btn-default"})
                <input type="submit" class="btn btn-danger btn-xs" value="Удалить"/>
            }
        </td>
    </tr>
}

</table>
@Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-primary"})
