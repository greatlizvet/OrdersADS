@using OrdersADS.Models
@model OrdersADS.Models.Request

@{
    ViewBag.Title = "Информация о заявке";
}

<h2>Информация</h2>

<div>
    <h4>Заявка</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.StatusId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Status.StatusName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ZakazchikId)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Zakazchik.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Details)
        </dt>
        <dd>
            <ul>
                @foreach (Detail d in Model.Details)
                {
                    <li>@d.Name</li>
                }
            </ul>
        </dd>

    </dl>
</div>
@Html.ActionLink("Изменить", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
@Html.ActionLink("Обратно", "Index", null, new { @class = "btn btn-default" })
@if(Model.StatusId == 6)
{
    @Html.ActionLink("Завершено", "End", new { id = Model.Id}, new { @class = "btn btn-default"})
}
