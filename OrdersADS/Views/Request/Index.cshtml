@model IEnumerable<OrdersADS.Models.Request>

@{
    ViewBag.Title = "Заявки";
}

<h2>Заявки</h2>
<button class="btn btn-primary" type="button" data-toggle="collapse" data-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Сортировка
</button>

<div class="collapse" id="collapseExample">
    <div class="well">
        <form asp-controller="Order" asp-action="Index" method="get">
            <div class="form-group">
                <label>Наименование:</label>
                <input type="text" class="form-control" placeholder="Наименование" name="SearchName">
            </div>
            <div class="form-group">
                <label>Заказ:</label>
                @Html.DropDownList("zakaz", null, new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label>Статус:</label>
                @Html.DropDownList("status", null, new { @class = "form-control" })
            </div>
            <button type="submit" class="btn btn-primary">Фильтр</button>
            @Html.ActionLink("Сброс", "Drop", "Order", new { @class = "btn btn-default" })
        </form>
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZakazchikId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatusId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zakazchik.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.StatusName)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Детали", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-primary" })