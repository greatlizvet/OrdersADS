@model IEnumerable<OrdersADS.Models.Request>

@{
    ViewBag.Title = "Заявки";
}

<h2>Заявки</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ZakazchikId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatusId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Zakazchik.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.StatusName)
            </td>
            <td>
                @using (Html.BeginForm("Delete", "Request", new { id = item.Id }))
                {
                    @Html.ActionLink("Изменить", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" })
                    @Html.ActionLink("Детали", "Details", new { id = item.Id }, new { @class = "btn btn-default btn-xs" })
                    <input type="submit" value="Удалить" class="btn btn-danger btn-xs" />
                }
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-primary" })