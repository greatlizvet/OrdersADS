@model IEnumerable<OrdersADS.Models.Status>

@{
    ViewBag.Title = "Статусы";
}

<h2>Статусы заявок</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.StatusName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.StatusName)
        </td>
        <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                @Html.ActionLink("Детали", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
        </td>
    </tr>
}

</table>

@Html.ActionLink("Добавить", "Create", null, new { @class ="btn btn-primary"})
