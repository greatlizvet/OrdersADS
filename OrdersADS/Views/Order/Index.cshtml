@model IEnumerable<OrdersADS.Models.Ordere>

@{
    ViewBag.Title = "Заказы";
}

<h2>Заказы</h2>
<form asp-controller="Order" asp-action="Index" method="get">
    <p>
        Заявка: @Html.DropDownList("request")
        Наименование: <input type="text" name="SearchName">
        Поставщик: @Html.DropDownList("provider")
        Статус: @Html.DropDownList("status")
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RequestId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProviderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StatusOrderId)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Request.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.dateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Provider.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StatusOrder.Name)
            </td>
            <td>
                    @Html.ActionLink("Изменить", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Детали", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Удалить", "Delete", new { id = item.Id}, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-primary" })
