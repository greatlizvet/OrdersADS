@model IEnumerable<OrdersADS.Models.Zakazchik>

@{
    ViewBag.Title = "Заказчики";
}

<h2>Заказчики</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @using (Html.BeginForm("Delete", "Zakazchik", new { id = item.Id }))
                {
                    @Html.ActionLink("Изменить", "Edit", new { id = item.Id }, new { @class = "btn btn-primary btn-xs" }) 
                    @Html.ActionLink("Детали", "Details", new { id = item.Id }, new { @class = "btn btn-default btn-xs" })
                    <input type="submit" value="Удалить" class="btn btn-danger btn-xs" />
                }
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-primary" })