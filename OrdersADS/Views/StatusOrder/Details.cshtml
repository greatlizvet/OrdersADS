@using OrdersADS.Models
@model OrdersADS.Models.StatusOrder

@{
    ViewBag.Title = "Информация о статусе";
}

<h2>Информация</h2>

<div>
    <h4>Статус</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

    </dl>
</div>
<div class="display-label"><b>Детали</b></div>
<ul>
    @foreach (Ordere o in Model.Orderes)
    {
        <li>@o.Name</li>
    }
</ul>
@Html.ActionLink("Изменить", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
@Html.ActionLink("Обратно", "Index", null, new { @class = "btn btn-default" })
