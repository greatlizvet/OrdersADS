@model IEnumerable<OrdersADS.Models.StatusOrder>

@{
    ViewBag.Title = "Статусы заказа";
}

<h2>Статусы</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @using (Html.BeginForm("Delete", "StatusOrder", new { id = item.Id }))
                {
                    @Html.ActionLink("Изменить", "Edit", new { id = item.Id }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Детали", "Details", new { id = item.Id }, new { @class = "btn btn-default" })
                    <input type="submit" class="btn btn-danger btn-xs" value="Удалить" />
                }
            </td>
        </tr>
    }

</table>
@Html.ActionLink("Добавить", "Create", null, new { @class = "btn btn-primary" })